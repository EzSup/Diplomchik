@page "/cuisineAdd"
@using Restaurant.Client.Shared.Admin
@using Restaurant.Client.Services.Interfaces
@using Restaurant.Client.Contracts.Cuisines
@using Mapster
@inject ICuisinesService cuisinesService
@layout AdminLayout

<div style="justify-content: center; display: flex; margin-top: 50px; ">
    <EditForm Model="@cuisine" OnValidSubmit="OnValidSubmit" style="width: 550px;">
        <DataAnnotationsValidator />
        <MudGrid>
            <MudItem xs="12" sm="7">
                <MudCard>
                    <MudCardContent>
                        <MudText Style="font-weight: bolder"><MudIcon Icon="@Icons.Material.Outlined.CreateNewFolder" />  Creating cuisine form</MudText>
                        <MudTextField Label="Name" HelperText="Enter an expense type name" @bind-Value="cuisine.Name" />          
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" Style="margin-left:auto; margin-right:auto;">Confirm</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </EditForm>
</div>

@code{
    CuisineCreateRequest cuisine = new();

    private async void OnValidSubmit(EditContext context)
    {
        await cuisinesService.Add(cuisine);
        NavManager.NavigateTo("/cuisinesManage");
    }
}