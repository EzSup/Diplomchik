@using Restaurant.Client.Contracts.Bill
@using Restaurant.Client.Contracts.Enums
@if (Bill != null)
{
    <div @onclick="MoveToDetails" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px;  margin: 20px; width: 300px; height: 400px; background-color: @(Bill.IsPaid ?"#b5e7a0":"#eca1a6");">
        <h5>Bill Details</h5>
        <hr />
        <div >
            <p style="font-size: 24px;"><strong>Total Price:</strong> @Bill.TotalPrice</p>
            <p style="font-size: 24px;"><strong>Order Date and Time:</strong> @Bill.OrderDateAndTime</p>
            <p style="font-size: 24px;"><strong>Tips:</strong> @Bill.Tips</p>
            <p style="font-size: 24px;"><strong>Order Type:</strong> @Bill.Type</p>
            @* <p><strong>Is Paid:</strong> @Bill.IsPaid</p> *@
        </div>        
    </div>
}


@code {
    [Parameter]
    public BillResponse Bill { get; set; }

    private void MoveToDetails()
    {
        NavManager.NavigateTo($"/billData/{Bill.Id}");
    }
}
