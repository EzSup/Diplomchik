@page "/blogslist"

@using Restaurant.Client.Services.Interfaces
@using Restaurant.Client.Contracts.Blogs
@inject IBlogsService blogsService
<h3>BlogsList</h3>
@if (blogs != null)
{
    @foreach (var blog in blogs)
    {
        <BlogListItem blog="blog"></BlogListItem>
    }
}

@code {
    private List<BlogResponse> blogs;    

    protected override async Task OnInitializedAsync()
    {
        blogs = (await blogsService.GetBlogsByPage(1,3)).ToList();
    }
}
