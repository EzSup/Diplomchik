@code {
	protected override async void OnAfterRender(bool firstRender)
	{
		try
		{
			await JS.InvokeVoidAsync("fadeInElement", "fade-in-footer", "50px");
			await JS.InvokeVoidAsync("AddClassInView", "RepeatTopToBot", "NormalTranslate", 0.5, true);
			await JS.InvokeVoidAsync("AddClassInView", "RepeatBotToTop", "NormalTranslate", 0.5, true);
			await JS.InvokeVoidAsync("AddClassInView", "RepeatLeftToRight", "NormalTranslate", 0.5, true);
			await JS.InvokeVoidAsync("AddClassInView", "RepeatRightToLeft", "NormalTranslate", 0.5, true);
			await JS.InvokeVoidAsync("AddClassInView", "RepeatScaledPlus", "NormalScale", 0.7, true);

		}catch{}
	}
}
